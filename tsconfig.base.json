{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@atelier-amelie-nx-trpc/helpers": ["libs/helpers/src/index.ts"],
      "@atelier-amelie-nx-trpc/prisma": ["libs/prisma/src/index.ts"],
      "@atelier-amelie-nx-trpc/purchase-service": ["libs/purchase-service/src/index.ts"],
      "@atelier-amelie-nx-trpc/trpc-routers": ["libs/trpc-routers/src/index.ts"],
      "@atelier-amelie-nx-trpc/validation-schema": ["libs/validation-schema/src/index.ts"]
      }
  },
  "exclude": ["node_modules", "tmp"]
}
